<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".activities.StartUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Regular Routine"
        android:textSize="30dp"
        android:textColor="#bdfded"
        android:background="#3d3d3d"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Saturday"
        android:onClick="getSaturdayRoutine"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/sundday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sunday"
        android:onClick="getSundayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/monday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Monday"
        android:onClick="getMondayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/tuesday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Tuesday"
        android:onClick="getTuesdayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/wednesday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Wednesday"
        android:onClick="getWednesdayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Thusday"
        android:onClick="getThursdayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Friday"
        android:onClick="getFridayRoutine"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
</LinearLayout>